<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="15dp">

    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/settings"
        android:contentDescription="settings icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/imageViewAlumno"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/usuario2"
        android:contentDescription="Imagen de un usuario"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/settings"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/button1Alumno"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Escanear Codigo"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bubble_bobble"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewAlumno"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button2Alumno"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Ver Mi Progreso"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bubble_bobble"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button1Alumno"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button3Alumno"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Canjear Recompensa"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bubble_bobble"
        android:background="@drawable/button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button2Alumno"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button5Alumno"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cerrar Sesion"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/bubble_bobble"
        android:background="@drawable/button2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button3Alumno"
        android:layout_marginTop="20dp" />

</RelativeLayout>
