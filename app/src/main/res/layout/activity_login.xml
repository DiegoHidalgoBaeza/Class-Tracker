<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center"
        android:padding="15dp"
        tools:context=".LoginActivity">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClassTracker"
            android:textSize="40sp"
            android:textColor="#f4d434"
            android:layout_centerInParent="true"
            android:fontFamily="@font/bubble_bobble"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="4"
            android:layout_marginTop="55dp"/>

        <ImageView
            android:id="@+id/imageViewLogin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Logo Login"
            android:src="@drawable/userlogin"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.133"/>


        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:fontFamily="@font/bubble_bobble"/>


        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:fontFamily="@font/bubble_bobble"/>


        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Iniciar sesión"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/bubble_bobble"
            android:background="@drawable/button"/>

        <TextView
            android:id="@+id/registrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:fontFamily="@font/bubble_bobble"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/recuperar_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar Cuenta"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:fontFamily="@font/bubble_bobble"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
